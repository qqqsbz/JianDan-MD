<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#FFF"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/refresh_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_loading_large"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/refresh_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#bb555555"
                android:layout_alignParentBottom="true"
                android:text="我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal|bottom" />


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/refresh_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑天鹅@环保"
                android:textSize="14sp"
                android:layout_margin="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_text_default_material_light"
                />

            <TextView
                android:id="@+id/refresh_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览100次"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/refresh_username"
                android:layout_centerVertical="true"
                android:textColor="@color/secondary_text_default_material_light"
                />

            <TextView
                android:id="@+id/refresh_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp"
                android:text="分享"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                />


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>