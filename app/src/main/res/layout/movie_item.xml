<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.0dip"
    app:cardCornerRadius="2.0dip"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_cover"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="1.5dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_loading_small"/>

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2.0dip"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="#ff000000"
            android:textSize="13.0sp"
            android:text="合金装备3食蛇者全中文视频01"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">


                <TextView
                    android:id="@+id/movie_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"
                    android:text="OO"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:textSize="10.0sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/movie_unlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"
                    android:layout_marginLeft="15dp"
                    android:text="XX"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:textSize="10.0sp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/movie_tucao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"
                    android:layout_marginLeft="15dp"
                    android:text="吐槽"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:textSize="10.0sp"
                    android:textStyle="normal"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/movie_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_more_horiz_grey600_24dp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>