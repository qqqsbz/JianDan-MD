<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/refresh_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/refresh_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/refresh_cover"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/refresh_cover"
                android:text="美国佛罗里达--诈死之都"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@+id/refresh_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/refresh_cover"
                android:layout_alignLeft="@+id/refresh_title"
                android:text="新闻哥"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15.0sp"/>

            <TextView
                android:id="@+id/refresh_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/refresh_username"
                android:layout_toRightOf="@+id/refresh_username"
                android:layout_marginLeft="16dp"
                android:text="浏览2222次"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15.0sp"/>


            <ImageView
                android:id="@+id/refresh_cover"
                android:layout_width="95dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_loading_small"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffd9d9d9"/>

</LinearLayout>